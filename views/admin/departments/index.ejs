
<%- include('../../partials/userHeader.ejs') %> 
<%- include("../../partials/adminSidebar.ejs") %>
    
<div class="wrapper">
  <header class="header-general">
    <a href="#" class="header-general-link">
      Utente: <%= currentUser.username %>
    </a>
  </header>
  <div class="inner-wrapper">
    <section>
      <div class="inner-header-container">
        <header class="inner-header-container-title">
          <h1>
            Lista Dipartimenti
          </h1>
        </header>
        <a href="/homeadmin/departments/new" class="inner-header-container-button">
          <button>
            Aggiungi nuovo dipartimento
          </button>
        </a>
      </div>
      <div class="posts">
        <% departments.forEach(function(dept){ %> 
        <% if(dept.createdBy.username === currentUser.username){ %>
          <article class="department-article">
            <a href="/homeadmin/departments/<%= dept._id%>" class="image">
              <img src="<%= dept.departmentImage%>" alt=""/>
            </a>
            <h3>
              <%= dept.departmentName %>
            </h3>
              <a href="/homeadmin/departments/<%= dept._id %>">
                <button>
                  Dettagli
                </button>
              </a>
          </article>
        <% } %> 
        <% }) %>
      </div>
    </section>
  </div>
</div>
</body>

</html>