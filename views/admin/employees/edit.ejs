
<%- include('../../partials/headerAdmin.ejs') %> 
<%- include("../../partials/adminSidebar.ejs") %>
<div class="wrapperHomeAdmin">
    <header class="headerHomeAdmin">
        <a href="#" class="nameAdmin">
            Utente: <%= currentUser.username %>
          </a>
          
    </header>
    <div class="wrapperDepAdmin">
    <section>
        <header class="updDepAdmin">
            <h1>Modifica informazioni</h1>
        </header>


        <form action="/homeadmin/employees/<%=emp._id%>?_method=PUT" method="POST">
            <div>
                <h5 class="sectionTitle">Informazioni Personali</h5>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                <label for="inputFname">Nome</label>
                <input class="form-control" type="text" id="inputFname" name="employee[firstName]" value="<%=emp.firstName%>" required />
            </div>
            <div class="form-group col-md-12">
                <label for="inputLname">Cognome</label>
                <input class="form-control" type="text" id="inputLname" name="employee[lastName]" value="<%=emp.lastName%>" required />
            </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                <label for="inputDob">Data di Nascita</label>
                <input class="form-control" type="date" id="inputDob" name="employee[dateOfBirth]" value="<%=emp.dateOfBirth%>" required />
            </div>
            <div class="form-group col-md-12">
                <label for="inputGender">Sesso</label>
                <select class="form-control" id="inputGender" name="employee[gender]" required>
                    <option selected><%= emp.gender %></option>
                    <% if(emp.gender === 'Male'){ %>
                    <option>Donna</option>
                    <% } else { %>
                    <option>Uomo</option>
                    <% } %>
                </select>
            </div>
        </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                <label for="inputPass">Password</label>
                <input class="form-control" type="text" id="inputPass" name="employee[password]" value="<%=emp.password%>" required />
            </div>
            <div class="form-group col-md-12">
                <label for="inputPhoto">Fotografia(URL)</label>
                <input class="form-control" type="text" id="inputPhoto" name="employee[photo]" value="<%=emp.photo%>" required />
            </div>
        </div>

            <div>
                <h5 class="sectionTitle">Contatti</h5>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                <label for="inputMobile">Cellulare</label>
                <input class="form-control" type="text" id="inputMobile" name="employee[mobile]" value="<%=emp.mobile%>" required />
            </div>
            <div class="form-group col-md-12">
                <label for="inputEmail">Email</label>
                <input class="form-control" type="email" id="inputEmail" name="employee[email]" value="<%=emp.email%>" required />
            </div>
        </div>

            <div>
                <h5 class="sectionTitle">Status Lavorativo</h5>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                <label for="inputEmployeeId">ID Dipendente</label>
                <input class="form-control" type="text" id="inputEmployeeId" name="employee[employeeId]" value="<%=emp.employeeId%>" required />
            </div>
            <div class="form-group col-md-12">
                <label for="inputDesignation">Posizione</label>
                <input class="form-control" type="text" id="inputDesignation" name="employee[designation]" value="<%=emp.designation%>" required />
            </div>
            <div class="form-group col-md-12">
                <label for="inputJoining">Data di Assunzione</label>
                <input class="form-control" type="date" id="inputJoining" name="employee[joiningDate]" value="<%=emp.joiningDate%>" required />
            </div>
            <div class="form-group col-md-12">
                <label for="inputDept">Dipartimento</label>
                <select class="form-control" id="inputDept" name="employee[department]">
                    <option selected><%=emp.department%></option>
                    <% departments.forEach(function(dept){ %> 
                    <% if(dept.createdBy.username === currentUser.username){ %>
                    <option><%= dept.departmentName%></option>
                    <% } %> 
                    <% }) %>
                </select>
            </div>
        </div>
            <button type="submit" class="submitBtn">
                Modifica
              </button>
        </form>
    </section>
    </div>
</div>
</body>
</html>