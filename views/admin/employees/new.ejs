<%- include('../../partials/headerAdmin.ejs') %> 
<%- include("../../partials/adminSidebar.ejs") %>

<div class="wrapper">
  <header class="header-general">
    <a href="#" class="header-general-link">
      Utente: <%= currentUser.username %>
    </a>      
  </header>
  <div class="inner-wrapper">
    <header>
      <h1>
        Creazione Dipendente
      </h1>
    </header>
    <form 
      action="/homeadmin/employees" 
      method="POST"
    >
      <div>
        <h5 class="section-title">
          Informazioni Personali
        </h5>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="input-first-name">
                Nome
              </label>
              <input class="form-control" type="text" id="input-first-name" name="employee[firstName]" required />
            </div>
            <div class="form-group col-md-12">
              <label for="input-last-name">
                Cognome
              </label>
              <input class="form-control" type="text" id="input-last-name" name="employee[lastName]" required />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="input-dob">
                Data di Nascita
              </label>
              <input class="form-control" type="date" id="input-dob" name="employee[dateOfBirth]" required />
            </div>
            <div class="form-group col-md-12">
              <label for="input-gender">
                Sesso
              </label>
              <select class="form-control" id="input-gender" name="employee[gender]" required>
                <option selected>-- Scegli --</option>
                <option>Uomo</option>
                <option>Donna</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="input-pass">
                Password
              </label>
              <input class="form-control" type="text" id="input-pass" name="employee[password]" required />
            </div>
            <div class="form-group col-md-12">
              <label for="input-photo">Fotografia(URL)</label>
              <input class="form-control" type="text" id="input-photo" name="employee[photo]" required />
            </div>
          </div>
        </div>
        <div>
          <h5 class="section-title">
            Contatti
          </h5>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="input-email">
                Email
              </label>
              <input class="form-control" type="email" id="input-email" name="employee[email]" required />
            </div>
            <div class="form-group col-md-12">
              <label for="input-mobile">
                Cellulare
              </label>
              <input class="form-control" type="text" id="input-mobile" name="employee[mobile]" required />
            </div>
          </div>
        </div>
        <div>
          <h5 class="section-title">
            Status Lavorativo
          </h5>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="input-employee-id">
                ID Dipendente
              </label>
              <input class="form-control" type="text" id="input-employee-id" name="employee[employeeId]" required />
            </div>
            <div class="form-group col-md-12">
              <label for="input-designation">
                Posizione
              </label>
              <input class="form-control" type="text" id="input-designation" name="employee[designation]" required />
            </div>
            <div class="form-group col-md-12">
              <label for="input-joining">
                Data di Assunzione
              </label>
              <input class="form-control" type="date" id="input-joining" name="employee[joiningDate]" required />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="input-dept">
                Dipartimento
              </label>
              <select class="form-control" id="input-dept" name="employee[department]">
                <option selected>-- scegli --</option>
                <% departments.forEach(function(dept){ %> 
                <% if(dept.createdBy.username === currentUser.username){ %>
                <option><%= dept.departmentName %></option>
                <% } %>    
                <% }) %>
              </select>
            </div>
            <div class="form-group col-md-12">
              <label for="input-company">
                Azienda
              </label>
              <input class="form-control" type="text" id="input-company" name="employee[company]" value="<%= currentUser.companyName %>" required />
            </div>
          </div>
        </div>
        <button type="submit" class="submit-button">
          Crea
        </button>
    </form>
  </div>
</div>
</body>

</html>