<%- include('../../partials/headerAdmin.ejs') %> 
<%- include("../../partials/employeeSidebar") %>
<div class="wrapperHomeAdmin">
    <header class="headerHomeAdmin">
        <a href="#" class="nameAdmin">
            Utente:</strong> <%= employee.firstName %> <%= employee.lastName %> - <%= currentUser.userRole %>
        </a>
    </header>
    <div class="wrapperDepAdmin">
    <section>
        <div class="headerContainerDepAdmin">
        <header class="headerDepAdmin">
            <h1>Lista Progetti</h1>
        </header>
    </div>
        <div class="tableContainer">
            <table class="tableAdmin">
                <thead>
                    <tr>
                        <th>Titolo</th>
                        <th>Inizio</th>
                        <th>Termine</th>
                        <th>Dipartimento Responsabile</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% projects.forEach(function(project){ %>
                    <% if(project.department === employee.department){ %>
                    <tr>
                        <td><a href="/homeemployee/projects/<%=project._id%>"><%= project.name %></a></td>
                        <td><%= project.start %></td>
                        <td><%= project.end %></td>
                        <td><%= project.department %></td>
                        <td><%= project.state %></td>
                    </tr>
                    <% } %>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </section>
    </div>
</div>
</body>
</html>